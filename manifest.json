{
    "manifest_version": 2,
    "name": "LinkedIn to Notion",
    "version": "1.0",

    "description": "Imports LinkedIn job applications to Notion Database",

    "icons": {
        "48": "icons/border-48.png"
    },
        "content_scripts": [
    {
        "matches": ["*://*.linkedin.com/*"],
        "js": ["content.js"]
    }
    ],

    "permissions": ["activeTab", "tabs"],

    "browser_action": {
        "default_popup": "popup/popup.html"
    }
}